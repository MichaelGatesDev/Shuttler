<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGeofences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="GEOFENCES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="0.0/0.0"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/btnGeofences"
        app:layout_constraintStart_toStartOf="@+id/btnGeofences"
        app:layout_constraintTop_toBottomOf="@+id/btnGeofences"
        tools:text="0.0/0.0" />

    <Button
        android:id="@+id/startUpdatesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Start Update"
        app:layout_constraintEnd_toEndOf="@+id/txtLocation"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txtLocation"
        app:layout_constraintTop_toBottomOf="@+id/txtLocation" />

    <Button
        android:id="@+id/stopUpdatesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:enabled="true"
        android:text="Stop Update"
        app:layout_constraintEnd_toEndOf="@+id/startUpdatesBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/startUpdatesBtn"
        app:layout_constraintTop_toBottomOf="@+id/startUpdatesBtn" />
</android.support.constraint.ConstraintLayout>